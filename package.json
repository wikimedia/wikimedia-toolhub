{
	"name": "toolhub",
	"version": "1.0.0",
	"private": true,
	"scripts": {
		"build:vue": "vue-cli-service build",
		"format": "eslint --fix .",
		"lint": "npm run lint:eslint && npm run lint:vue && npm run lint:stylelint && npm run lint:banana && npm run lint:css-rtl",
		"lint:banana": "banana-checker vue/src/assets/locales/i18n/",
		"lint:css-rtl": "bash -c \"if grep -rnHIE --color '\\b[mp][lr]-(n?[0-9][0-6]?|auto)\\b' vue/src; then echo 'ERROR: Use S and E helper classes, not L and R. (T269056)'; echo; exit 1; fi\"",
		"lint:eslint": "eslint .",
		"lint:stylelint": "stylelint -f verbose '{toolhub,vue}/**/*.{css,scss,sass,vue}'",
		"lint:vue": "vue-cli-service lint",
		"schemas:generate": "jsonschema-tools materialize-all",
		"serve:vue": "vue-cli-service serve",
		"unit": "npm run unit:jsonschema && npm run unit:vue",
		"unit:jsonschema": "mocha tests/jsonschema",
		"unit:vue": "NODE_ENV=test nyc vue-cli-service test:unit --slow=5 --timeout=1000 'vue/src/**/*.spec.js'",
		"test": "npm run lint && npm run unit"
	},
	"dependencies": {
		"@casl/ability": "^5.4.3",
		"@casl/vue": "^1.2.3",
		"@wikimedia/language-data": "^1.0.4",
		"banana-i18n": "^2.3.1",
		"chart.js": "^2.9.4",
		"core-js": "^3.19.2",
		"json-pointer": "^0.6.1",
		"lodash": "^4.17.21",
		"swagger-client": "^3.18.4",
		"vue": "^2.6.14",
		"vue-async-computed": "^3.9.0",
		"vue-chartjs": "^3.5.1",
		"vue-clipboard2": "^0.3.3",
		"vue-frag": "^1.3.1",
		"vue-i18n": "^8.26.7",
		"vue-meta": "^2.4.0",
		"vue-moment": "^4.1.0",
		"vue-router": "^3.5.3",
		"vuetify": "^2.6.1",
		"vuex": "^3.6.2"
	},
	"devDependencies": {
		"@babel/eslint-parser": "^7.17.0",
		"@intlify/eslint-plugin-vue-i18n": "^1.3.0",
		"@mdi/font": "^6.5.95",
		"@vue/cli": "^5.0.1",
		"@vue/cli-plugin-babel": "^5.0.1",
		"@vue/cli-plugin-eslint": "^5.0.1",
		"@vue/cli-plugin-router": "^5.0.1",
		"@vue/cli-plugin-unit-mocha": "^5.0.1",
		"@vue/cli-plugin-vuex": "^5.0.1",
		"@vue/cli-service": "^5.0.1",
		"@vue/test-utils": "^1.3.0",
		"@wikimedia/jsonschema-tools": "^0.10.4",
		"babel-plugin-istanbul": "^6.1.1",
		"chai": "^4.3.6",
		"eslint": "^8.10.0",
		"eslint-config-wikimedia": "^0.22.1",
		"eslint-plugin-vue": "^8.5.0",
		"eslint-plugin-vuetify": "^1.1.0",
		"grunt-banana-checker": "^0.9.0",
		"mocha": "^9.2.1",
		"nyc": "^15.1.0",
		"rapidoc": "^9.1.3",
		"sass": "~1.32",
		"sass-loader": "^12.6.0",
		"sinon": "^13.0.1",
		"sinon-chai": "^3.7.0",
		"stylelint": "^14.5.3",
		"stylelint-config-html": "^1.0.0",
		"stylelint-config-recommended-vue": "^1.3.0",
		"stylelint-config-wikimedia": "^0.12.2",
		"vue-cli-plugin-vuetify": "^2.4.4",
		"vue-template-compiler": "^2.6.14",
		"vuetify-loader": "^1.7.3",
		"webpack-bundle-tracker": "^0.4.3"
	},
	"babel": {
		"presets": [
			"@vue/cli-plugin-babel/preset"
		],
		"env": {
			"test": {
				"plugins": [
					[
						"istanbul",
						{
							"useInlineSourceMaps": false
						}
					]
				]
			}
		}
	},
	"nyc": {
		"all": true,
		"extension": [
			".js",
			".vue"
		],
		"include": [
			"vue/src/**/*.js",
			"vue/src/**/*.vue"
		],
		"exclude": [
			"vue/src/main.js",
			"vue/src/**/*.spec.js",
			"**/test/**"
		],
		"sourceMap": false,
		"reporter": [
			"text",
			"text-summary"
		],
		"report-dir": "./.nyc_output/coverage",
		"per-file": false,
		"skip-full": true,
		"lines": 85,
		"functions": 85,
		"branches": 75,
		"statements": 85,
		"check-coverage": true,
		"watermarks": {
			"lines": [
				84,
				85
			],
			"functions": [
				84,
				85
			],
			"branches": [
				84,
				85
			],
			"statements": [
				84,
				85
			]
		}
	},
	"eslintConfig": {
		"root": true,
		"parserOptions": {
			"parser": "@babel/eslint-parser",
			"allowImportExportEverywhere": true,
			"requireConfigFile": false
		},
		"extends": [
			"wikimedia/client-es6"
		],
		"reportUnusedDisableDirectives": true,
		"overrides": [
			{
				"files": [
					"jsonschema/**/*.json"
				],
				"rules": {
					"indent": "off",
					"eol-last": "off"
				}
			},
			{
				"files": [
					"tests/jsonschema/**/*.js"
				],
				"extends": [
					"wikimedia/server",
					"wikimedia/mocha"
				]
			},
			{
				"files": [
					"vue/src/**/*.{js,vue}"
				],
				"extends": [
					"wikimedia/vue-es6",
					"wikimedia/language/es6",
					"plugin:@intlify/vue-i18n/recommended"
				],
				"plugins": [
					"vuetify"
				],
				"rules": {
					"camelcase": "off",
					"no-undef": "off",
					"no-underscore-dangle": [
						"error",
						{
							"allowAfterThis": true
						}
					],
					"vue/first-attribute-linebreak": "off",
					"vue/multi-word-component-names": "off",
					"vue/no-undef-components": "off",
					"vue/no-undef-properties": "off",
					"vue/quote-props": "off",
					"vue/singleline-html-element-content-newline": "off",
					"vuetify/grid-unknown-attributes": "error",
					"vuetify/no-deprecated-classes": "error",
					"vuetify/no-legacy-grid": "error",
					"@intlify/vue-i18n/no-dynamic-keys": "error",
					"@intlify/vue-i18n/no-unused-keys": [
						"error",
						{
							"extensions": [
								".js",
								".vue"
							]
						}
					],
					"@intlify/vue-i18n/no-raw-text": [
						"error",
						{
							"ignoreNodes": [
								"v-icon"
							],
							"ignorePattern": "^\\s*[:()\\[\\]\"/-]+$",
							"ignoreText": []
						}
					],
					"@intlify/vue-i18n/key-format-style": [
						"error",
						"kebab-case"
					],
					"unicorn/prefer-string-slice": "off"
				},
				"settings": {
					"vue-i18n": {
						"localeDir": "./vue/src/assets/locales/i18n/*.js",
						"messageSyntaxVersion": "^8.22.1"
					}
				}
			},
			{
				"files": [
					"vue.config.js"
				],
				"extends": [
					"wikimedia/server"
				],
				"rules": {
					"unicorn/prefer-includes": "off"
				}
			},
			{
				"files": [
					"**/docker-compose.prometheus.yaml",
					"**/docker-compose.yaml"
				],
				"rules": {
					"yml/no-empty-mapping-value": "off"
				}
			}
		]
	},
	"eslintIgnore": [
		".pipeline",
		"bin",
		"dist",
		"docs",
		"toolhub/fixtures/demo.yaml",
		"toolhub/apps/toolinfo/data/language-data.json",
		"vue/dist-tests/webpack-stats.json"
	],
	"stylelint": {
		"extends": [
			"stylelint-config-wikimedia/grade-a",
			"stylelint-config-recommended-vue",
			"stylelint-config-html"
		],
		"ignoreFiles": [
			"docs/_build/**/*.css",
			"vue/dist/**/*"
		],
		"rules": {
			"selector-max-id": null,
			"declaration-no-important": null
		}
	},
	"browserslist": [
		"> 1%",
		"last 2 versions",
		"not dead"
	]
}
